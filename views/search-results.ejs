<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('partials/head') %>

<body>
	<!-- Header -->
	<% if (locals.User != undefined) { %>
		<%- include('./partials/headerLogueado.ejs')  %> 
	<% }   else {%>
		<%- include('./partials/header.ejs')  %> 
	<% } %> 
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title" > 
					<% if(locals.errorsBuscador){ %>
						<i class="fa-solid fa-circle-xmark"></i> <%= locals.errorsBuscador.message %>
					<% } else {%>
					<i class="fa-solid fa-circle-xmark"></i> Estos son los resultados de tu busqueda %>
					<% }%> 
			</div>

			<% if(!locals.errorsBuscador) { %> 
					<div class="container products-wrapper">
						<div class="row">
							<% for(let i = 0; i < productos.length; i++){ %>
							<div class="col-12 col-sm-6 col-lg-3">
								<section class="product-box">
									<h2 class="tituloProductox"><%=productos[i].nombre%></h2>
									<a href="/product/id/<%=productos[i].id%>">
										<figure class="product-box_image">
											<a href="/product/id/<%=productos[i].id%>"><img src="/images/products/<%= productos[i].image %>" alt=<%=productos[i].nombre%></a>
										</figure>
										<article class="product-box_data">
											<h3>Cargado por
												<a class="nombreDelUsuarioCSS" href="/user/profile/<%= productos[i].usuario_id%>"><%=productos[i].User.nombre%></a>
											</h3>
											<p><%= productos[i].description %></p>
										</article>
									</a>
								</section>
							</div>
							<% } %>
					</div>
				</div>
			</div>
			<% } %> 
	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>

</html>
<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('partials/head') %>

<body>
	<!-- Header -->
	<% if (locals.User != undefined) { %>
		<%- include('./partials/headerLogueado.ejs')  %> 
	<% }else {%>
		<%- include('./partials/header.ejs')  %> 
	<% } %> 
	<!-- /Header -->

	<!-- Novedades -->
	
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados encontrados para tu busqueda  </h2>

			<div>
				<h2 class="errorBusqueda"> <i> 
					<% if(locals.errors){ %>
						<p class="mensajeDeErrorResultados"> 
							<i class="fa-solid fa-circle-xmark"></i> <%= locals.errors.message %>
						</p>
					<% } %>
			</div>

				<div class="product-box product-search-result">
					<% for(let i = 0; i < productos.length; i++){ %>
						<div class="col-12 col-sm-6 col-lg-3">
							<section class="product-box">
								<a href="/product/id/<%=productos[i].id%>">
									<figure class="product-box_image">
										<img src="/images/products/<%= productos[i].image %>" alt=<%=productos[i].nombre%>>
									</figure>
									<article class="product-box_data">
										<h3>Cargado por 
											<a href="/user/profile/<%= productos[i].usuario_id%>"><%= productos[i].User.nombre %> </a>
										</h3>
										<p><%= productos[i].description %></p>
									</article>
								</a>
							</section>
						</div>
						<% } %>
				</div>
			</div>

	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>

</html>
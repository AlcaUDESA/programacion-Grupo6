<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head') %>
<body>
	<!-- Header -->
	<% if (locals.User != undefined) { %>
		<%- include('./partials/headerLogueado.ejs')  %> 
	<% }else {%>
		<%- include('./partials/header.ejs')  %> 
	<% } %> 
	<!-- /Header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
					<img src="/images/users/<%= user.picture %>" alt="Imagen de <%=user.nombre%>" id="logo" style="width: 150px;height: 150px;" radius="50" class="logo" > 
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title user-name"><%= user.nombre%></h1>
					<% if (locals.User != undefined ) { %>
						<%if (locals.User.id == id) { %><a href="/user/profile/edit/<%=id%>">
							<i class="fas fa-cog"></i>
						</a>				
					<% } %> 
					<%if (locals.User.id != id) { %>
						<a class="btn mt-3 ml-4 " href="/user/profile/seguir/<%=id%>">SEGUIR</a> 
						<% } %> 
					<% } %> 
					
					</h1>
				</div>
				<div>
					<ul class="info-usuario-counter">
						<li><%=user.email%></li>
						<li><%= user.Product.length %> Productos subidos</li>
						<li><%= user.Coments.length%> Comentarios</li>
						<li><%= follow.length%> seguidores</li>
					</ul>
				</div>
			</div>
		</div>
	</div>

	</section>
	<!-- /Datos del usuario -->
	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			<% for(let i = 0; i < user.Product.length; i++){ %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/id/<%= user.Product[i].id %>">
							<figure class="product-box_image">
								<img src="/images/products/<%= user.Product[i].image %>" alt=<%= user.Product[i].nombre %>>
							</figure>
							<article class="product-box_data">
								<h2><%= user.Product[i].nombre %></h2>
								<p><%= user.Product[i].description %> </p>
							</article>
						</a>
					</section>
				</div>
			<% } %>
		</div>
	</div>
	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>	
</html>
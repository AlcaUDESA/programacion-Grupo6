<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head') %>
<body>
	<!-- Header -->
	<% if (locals.User != undefined) { %>
		<%- include('./partials/headerLogueado.ejs')  %> 
	<% }else {%>
		<%- include('./partials/header.ejs')  %> 
	<% } %> 
	<!-- /Header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<% if (locals.User != undefined) { %>
					
					  <img src="<%= picture %>" alt="Imagen de <%= nombre %>" id="logo" style="width: 100px;" radius="50" />
				
			   <% }else { %>
					
					  <img src="/images/logo.png" style="width: 100px;" alt="usuario vacio" id="logo" />
					
				<% } %> 
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title user-name"><%=nombre%>
					
						<% if (locals.User.id == idUrl) { %>

							<a href="/user/profile/edit/<%=User.id%>">
							<i class="fas fa-cog"></i>
						</a>
						<% }else { %>
						<a class="btn mt-3 ml-4 " href="/user/profile/seguir/<%=User.id%>">SEGUIR</a> 
						<% } %> 
						
					</h1>
					
						
					
					
				</div>
				<div>
					<ul class="info-usuario-counter">
						<li><%=email%></li>
						<li><%= productos.length %>  productos subidos</li>
						<li><%=comenta.length%> comentarios</li>
						<li>300 seguidores</li>
					</ul>
				</div>
			</div>
		</div>
	</div>

	</section>
	<!-- /Datos del usuario -->
	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			<% for(let i = 0; i < productos.length; i++){ %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/id/<%= productos[i].id %>">
							<figure class="product-box_image">
								<img src="<%= productos[i].image %>" alt=<%= productos[i].nombre %>>
							</figure>
							<article class="product-box_data">
								<h2><%= productos[i].nombre %></h2>
								<p><%= productos[i].description %> </p>
							</article>
						</a>
					</section>
				</div>
			<% } %>
		</div>
	</div>
	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>	
</html>